@model EmployeeManagement.ViewModels.EmployeeIndexViewModel

@{
    ViewBag.Title = "Employee Index";
}
<a asp-controller="Employee" asp-action="create" class="btn btn-primary mb-2">Create a new Employee</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Start Date Of Work</th>
            <th scope="col">Position</th>
            <th scope="col">Company</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <th>@employee.Id</th>
                <th>@employee.FirstName</th>
                <th>@employee.LastName</th>
                <th>@employee.StartDateOfWork</th>
                <th>@employee.Position</th>
                <th>@employee.Company</th>
                <th>
                    <a asp-controller="employee" asp-action="edit" asp-route-Id="@employee.Id" class="btn btn-primary m-1">Edit</a>
                    <form asp-controller="employee" asp-action="delete" asp-route-Id="@employee.Id" method="post" style="display: inline-block;">
                        <button type="submit" class="btn btn-danger"
                            onclick="return confirm('Are you sure that you want to delete?');">
                            Delete
                        </button>
                    </form>
                </th>
            </tr>
        }
    </tbody>
</table>